<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:elevation="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/color_white"
        android:id="@+id/action_bar_layout">

        <ImageView

            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_lamp"
            android:id="@+id/iv_logo"
            android:layout_marginLeft="15dp"
            android:foreground="?android:attr/selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/activity_title"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/primary"
            android:textSize="22sp"
            android:layout_centerInParent="true"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp">


            <vn.luongvo.widget.iosswitchview.SwitchView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                app:color_off="@color/divider"
                android:layout_marginTop="1dp"
                app:color_on="@color/primary"
                android:id="@+id/switchView"/>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:layout_above="@+id/bottom_bar"
        android:layout_below="@+id/action_bar_layout">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/radioGroup1"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:button="@null"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:id="@+id/toggle_button_one"
                        android:background="@drawable/radio_button"
                        android:checked="false"
                        android:text="Button 1"
                        style="@android:"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/color_white"
                        android:paddingTop="25dp"
                        android:drawablePadding="-10dp"
                        android:drawableTop="@drawable/ic_light_bulb"
                        android:textAlignment="center"/>

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:button="@null"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:id="@+id/toggle_button_two"
                        android:background="@drawable/radio_button"
                        android:checked="false"
                        android:text="Button 2"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/color_white"
                        android:paddingTop="25dp"
                        android:drawablePadding="-10dp"
                        android:drawableTop="@drawable/ic_light_bulb"
                        android:textAlignment="center"/>
                </RadioGroup>



                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/radioGroup2"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:button="@null"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:id="@+id/toggle_button_three"
                        android:background="@drawable/radio_button"
                        android:checked="false"
                        android:text="Button 3"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/color_white"
                        android:paddingTop="25dp"
                        android:drawablePadding="-10dp"
                        android:drawableTop="@drawable/ic_light_bulb"
                        android:textAlignment="center"/>

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:button="@null"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:id="@+id/toggle_button_four"
                        android:background="@drawable/radio_button"
                        android:checked="false"
                        android:text="Button 4"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/color_white"
                        android:paddingTop="25dp"
                        android:drawablePadding="-10dp"
                        android:drawableTop="@drawable/ic_light_bulb"
                        android:textAlignment="center"/>
                </RadioGroup>


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:id="@+id/radioGroup3"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:button="@null"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:id="@+id/toggle_button_five"
                        android:background="@drawable/radio_button"
                        android:checked="false"
                        android:text="Button 5"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/color_white"
                        android:paddingTop="25dp"
                        android:drawablePadding="-10dp"
                        android:drawableTop="@drawable/ic_light_bulb"
                        android:textAlignment="center"/>

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:button="@null"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:id="@+id/toggle_button_six"
                        android:background="@drawable/radio_button"
                        android:checked="false"
                        android:text="Button 6"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/color_white"
                        android:paddingTop="25dp"
                        android:drawablePadding="-10dp"
                        android:drawableTop="@drawable/ic_light_bulb"
                        android:textAlignment="center"/>
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/radioGroup4"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:button="@null"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:id="@+id/toggle_button_seven"
                        android:background="@drawable/radio_button"
                        android:checked="false"
                        android:text="Button 7"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/color_white"
                        android:paddingTop="25dp"
                        android:drawablePadding="-10dp"
                        android:drawableTop="@drawable/ic_light_bulb"
                        android:textAlignment="center"/>

                    <RadioButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:button="@null"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:id="@+id/toggle_button_eight"
                        android:background="@drawable/radio_button"
                        android:checked="false"
                        android:text="Button 8"
                        android:fontFamily="@font/segoeui"
                        android:textColor="@color/color_white"
                        android:paddingTop="25dp"
                        android:drawablePadding="-10dp"
                        android:drawableTop="@drawable/ic_light_bulb"
                        android:textAlignment="center"/>
                </RadioGroup>

            </LinearLayout>


        </ScrollView>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_bar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_bluetooth"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:id="@+id/tv_connetivity_status"
                    android:textColor="@color/primary_text"
                    android:text="No Device Connected"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:onClick="goToSettings"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center">

                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_settings"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/primary_text"
                    android:text="Settings"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>