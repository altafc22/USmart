<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:elevation="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/color_white"
        android:id="@+id/action_bar_layout">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_lamp"
            android:id="@+id/iv_logo"
            android:layout_marginLeft="15dp"
            android:foreground="?android:attr/selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/activity_title"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/primary"
            android:textSize="22sp"
            android:layout_centerInParent="true"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp">


            <vn.luongvo.widget.iosswitchview.SwitchView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                app:color_off="@color/divider"
                android:layout_marginTop="1dp"
                app:color_on="@color/primary"
                android:id="@+id/switchView"/>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:layout_above="@+id/bottom_bar"
        android:layout_below="@+id/action_bar_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_app_bg"
            android:scaleType="centerCrop"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <net.colindodd.toggleimagebutton.ToggleImageButton xmlns:tib="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/toggle_button_one"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:checked="false"
                            android:fontFamily="@font/segoeui"
                            android:textColor="@color/color_white"
                            tib:tib_drawable_off="@drawable/ic_lighting_button_normal"
                            tib:tib_drawable_on="@drawable/ic_lighting_button_pressed" />

                        <TextView
                            android:id="@+id/tv_btn_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button 1"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <net.colindodd.toggleimagebutton.ToggleImageButton xmlns:tib="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/toggle_button_two"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:checked="false"
                            android:fontFamily="@font/segoeui"
                            android:textColor="@color/color_white"
                            tib:tib_drawable_off="@drawable/ic_lighting_button_normal"
                            tib:tib_drawable_on="@drawable/ic_lighting_button_pressed" />

                        <TextView
                            android:id="@+id/tv_btn_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button 2"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <net.colindodd.toggleimagebutton.ToggleImageButton xmlns:tib="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/toggle_button_three"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:checked="false"
                            android:fontFamily="@font/segoeui"
                            android:textColor="@color/color_white"
                            tib:tib_drawable_off="@drawable/ic_lighting_button_normal"
                            tib:tib_drawable_on="@drawable/ic_lighting_button_pressed" />

                        <TextView
                            android:id="@+id/tv_btn_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button 3"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <net.colindodd.toggleimagebutton.ToggleImageButton xmlns:tib="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/toggle_button_four"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:checked="false"
                            android:fontFamily="@font/segoeui"
                            android:textColor="@color/color_white"
                            tib:tib_drawable_off="@drawable/ic_lighting_button_normal"
                            tib:tib_drawable_on="@drawable/ic_lighting_button_pressed" />

                        <TextView
                            android:id="@+id/tv_btn_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button 4"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <net.colindodd.toggleimagebutton.ToggleImageButton xmlns:tib="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/toggle_button_five"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:checked="false"
                            android:fontFamily="@font/segoeui"
                            android:textColor="@color/color_white"
                            tib:tib_drawable_off="@drawable/ic_lighting_button_normal"
                            tib:tib_drawable_on="@drawable/ic_lighting_button_pressed" />

                        <TextView
                            android:id="@+id/tv_btn_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button 5"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <net.colindodd.toggleimagebutton.ToggleImageButton xmlns:tib="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/toggle_button_six"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:checked="false"
                            android:fontFamily="@font/segoeui"
                            android:textColor="@color/color_white"
                            tib:tib_drawable_off="@drawable/ic_lighting_button_normal"
                            tib:tib_drawable_on="@drawable/ic_lighting_button_pressed" />

                        <TextView
                            android:id="@+id/tv_btn_six"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button 6"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <net.colindodd.toggleimagebutton.ToggleImageButton xmlns:tib="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/toggle_button_seven"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:checked="false"
                            android:fontFamily="@font/segoeui"
                            android:textColor="@color/color_white"
                            tib:tib_drawable_off="@drawable/ic_lighting_button_normal"
                            tib:tib_drawable_on="@drawable/ic_lighting_button_pressed" />

                        <TextView
                            android:id="@+id/tv_btn_seven"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button 7"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <net.colindodd.toggleimagebutton.ToggleImageButton xmlns:tib="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/toggle_button_eight"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:checked="false"
                            android:fontFamily="@font/segoeui"
                            android:textColor="@color/color_white"
                            tib:tib_drawable_off="@drawable/ic_lighting_button_normal"
                            tib:tib_drawable_on="@drawable/ic_lighting_button_pressed" />

                        <TextView
                            android:id="@+id/tv_btn_eight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button 8"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </ScrollView>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_bar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_bluetooth"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:id="@+id/tv_connetivity_status"
                    android:textColor="@color/primary_text"
                    android:text="No Device Connected"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:onClick="goToSettings"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center">

                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_settings"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:textColor="@color/primary_text"
                    android:text="Settings"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>